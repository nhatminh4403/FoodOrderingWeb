@model FoodOrderingWeb.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h3>Thêm </h3>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card">
                <form class="form-horizontal" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card-body">
                        <h4 class="card-title">Thêm món ăn</h4>
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-3 text-right control-label col-form-label"></label><span>: </span> <span class="text-danger">*</span>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" asp-for="Name"
                                       required autofocus>
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label class="col-md-3 text-right control-label col-form-label" asp-for="CategoryIcon">Icon mô tả: <span class="text-danger">*</span></label>
                            <div class="col-md-9">
                                <div class="custom-file">
                                    <input type="file" class="form-control" id="image" name="image" required accept="image/*" placeholder="Chọn
                                                ảnh từ máy..." asp-for="CategoryIcon">
                                </div>
                            </div>
                        </div>

                        <div class="border-top text-center">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary">Thêm</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewPoster(event) {
            const input = event.target;
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const posterPreview = document.getElementById('posterPreview');
                    posterPreview.src = e.target.result;
                    posterPreview.style.display = 'block';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

    </script>
}
