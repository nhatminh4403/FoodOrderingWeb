@model IEnumerable<FoodOrderingWeb.Areas.Admin.ViewModel.RestaurantAccVM>

<div class="table-responsive">
    <table id="restaurant_table" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Email</th>
                <th>Tên quán</th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Restaurant.User.Email</td>
                    <td>@item.Restaurant.RestaurantName</td>
                    <td>@item.Restaurant.RestaurantAddress</td>
                    <td>@item.Restaurant.StorePhoneNumber</td>
                    <td>
                        @if (item.Restaurant.User.LockoutEnd.HasValue && item.Restaurant.User.LockoutEnd > DateTimeOffset.UtcNow)
                        {
                            <a href="javascript:void(0)" onclick="showLockoutDetails('@item.Restaurant.User.LockoutEnd')">
                                Vô hiệu hóa đến: @item.Restaurant.User.LockoutEnd.Value.ToString("dd/MM/yyyy HH:mm")
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-danger" onclick="showDisableAccountModal('@item.Restaurant.User.Id')">Vô hiệu hóa</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Email</th>
                <th>Tên quán</th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
                <th>Hành động</th>
            </tr>
        </tfoot>
    </table>
</div>
