@model FoodOrderingWeb.Areas.Admin.ViewModel.AccountVM

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.3/dist/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/extra-libs/multicheck/multicheck.css">
    <link href="~/admin/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
    <style>
        .page-wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .footer {
            margin-top: auto;
        }

        .tab-content {
            margin-top: 20px;
        }
    </style>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Quản lý tài khoản</h5>

                    <ul class="nav nav-tabs" id="accountTabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="customer-tab" data-toggle="tab" href="#customers" role="tab" aria-controls="customers" aria-selected="true">Khách hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="restaurant-tab" data-toggle="tab" href="#restaurants" role="tab" aria-controls="restaurants" aria-selected="false">Nhà hàng</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="accountTabsContent">
                        <div class="tab-pane fade show active" id="customers" role="tabpanel" aria-labelledby="customer-tab">
                            @Html.Partial("_CustomerPartialView", Model.Customers)
                        </div>
                        <div class="tab-pane fade" id="restaurants" role="tabpanel" aria-labelledby="restaurant-tab">
                            @Html.Partial("_RestaurantPartialView", Model.Restaurants)
                        </div>
                    </div>
                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.3/dist/sweetalert2.all.min.js"></script>
    <script src="~/admin/assets/extra-libs/multicheck/datatable-checkbox-init.js"></script>
    <script src="~/admin/assets/extra-libs/multicheck/jquery.multicheck.js"></script>
    <script src="~/admin/assets/extra-libs/DataTables/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#customer_table').DataTable();
            $('#restaurant_table').DataTable();
        });

        function showLockoutDetails(lockoutEnd) {
            Swal.fire({
                title: 'Thông tin vô hiệu hóa',
                text: 'Tài khoản sẽ được kích hoạt lại vào: ' + new Date(lockoutEnd).toLocaleString(),
                icon: 'info',
                confirmButtonText: 'OK'
            });
        }

        function showDisableAccountModal(userId) {
            Swal.fire({
                title: 'Chọn thời gian vô hiệu hóa',
                html: `
                            <button class="btn btn-primary" onclick="disableAccount('${userId}', 7)">7 ngày</button>
                            <button class="btn btn-primary" onclick="disableAccount('${userId}', 30)">30 ngày</button>
                            <button class="btn btn-danger" onclick="disableAccount('${userId}', -1)">Vĩnh viễn</button>
                            <br><br>
                            <label><input type="checkbox" id="customDurationCheckbox"> Tùy chọn thời gian vô hiệu hóa</label>
                            <br><br>
                            <input type="number" id="customDuration" placeholder="Số ngày" style="display: none;" class="form-control">
                        `,
                showCancelButton: true,
                showConfirmButton: true,
                preConfirm: () => {
                    // Collect the custom duration value if the checkbox is checked
                    let days = $('input[name="customDuration"]').val();
                    if ($('#customDurationCheckbox').is(':checked')) {
                        return days;
                    }
                    return null;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    let customDays = result.value;
                    if (customDays) {
                        disableAccount(userId, customDays);
                    }
                }
            });

            $('#customDurationCheckbox').change(function () {
                if (this.checked) {
                    $('#customDuration').show();
                } else {
                    $('#customDuration').hide();
                }
            });
        }

        function disableAccount(userId, days) {
            if (days === -1) {
                days = null; // Vô hiệu hóa vĩnh viễn
            } else if ($('#customDurationCheckbox').is(':checked')) {
                days = $('#customDuration').val();
            }


            $.ajax({
                url: '@Url.Action("DisableAccount", "Account", new { area = "Admin" })',
                type: 'POST',
                data: { userId: userId, days: days },
                success: function (result) {
                    Swal.fire({
                        title: 'Thành công!',
                        text: 'Tài khoản đã được vô hiệu hóa.',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            location.reload(); // Tải lại trang sau khi nhấp OK
                        }
                    });
                },
                error: function (error) {
                    Swal.fire('Lỗi!', 'Đã xảy ra lỗi khi vô hiệu hóa tài khoản.', 'error');
                }
            });
        }
    </script>
}
